<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lonavala">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Heading TextView -->
            <TextView
                android:id="@+id/textLonavala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:padding="16dp"
                android:text="Shirdi to Lonavala"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <!-- Muktidham Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Lonavalalocation"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewBigfoot"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Tiger's Point"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tigerspoint"
                android:layout_width="wrap_content"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/tigerspoint"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewAugada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Karla Caves"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/karlacave"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/karlacave"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewSecretariat"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Lohagad Fort"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/lohagadfort"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/lohagadfort"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textViewvagatar"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Bhushi Dam"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ramrachiloc"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/bhuishidam"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Dukeloc"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textDuke"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Duke's Nose"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Rajmachi"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/dukenose"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Rajmachilocation"
                    android:layout_width="67dp"
                    android:layout_height="78dp"
                    app:srcCompat="@drawable/location"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textRajmachi"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Rajmachi Point"
                    android:textSize="30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/dpaul"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ramrachipoint"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/lonavalabooknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>